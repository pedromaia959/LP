#include <stdio.h>

int main() 
{
    int cont1 = 0, cont2 = 0, vetor[5];
    scanf("%d %d %d %d %d", &vetor[0], &vetor[1], &vetor[2], &vetor[3], &vetor[4]);
    
    for ( cont2 = 0; cont2 < 5; cont2++)
    {
        if (vetor[cont2] % 2 == 0)
        {
            cont1++;
        }
    }
    printf("%d valores pares\n", cont1);
    
return 0;
}


