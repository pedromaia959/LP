#include <stdio.h>

int main() 
{
    int xzao;
    scanf("%d", &xzao);
    printf("%d\n", xzao);
    
    printf("%d nota(s) de R$ 100,00\n", xzao/100);
    xzao %= 100;
    
    printf("%d nota(s) de R$ 50,00\n", xzao/50);
    xzao %= 50;
    
    printf("%d nota(s) de R$ 20,00\n", xzao/20);
    xzao %= 20;
    
    printf("%d nota(s) de R$ 10,00\n", xzao/10);
    xzao %= 10;
    
    printf("%d nota(s) de R$ 5,00\n", xzao/5);
    xzao %= 5;
    
    printf("%d nota(s) de R$ 2,00\n", xzao/2);
    xzao %= 2;      
    
    printf("%d nota(s) de R$ 1,00\n", xzao);
    
return 0;
}
